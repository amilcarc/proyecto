@font-face {
    font-family: 'iconos';
    src:    url('fonts/icomoon.eot?glmfcv');
    src:    url('fonts/icomoon.eot?glmfcv#iefix') format('embedded-opentype'),
        url('fonts/icomoon.ttf?glmfcv') format('truetype'),
        url('fonts/icomoon.woff?glmfcv') format('woff'),
        url('fonts/icomoon.svg?glmfcv#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}body
	background black
	.sow
		padding 0
		border solid white
		background gris_claro
		border-radius 15px
		margin 15px
		box-shadow 3px 3px 50px white
	nav
		background #C0C0C0
		border-left 15px solid white
		position relative
		&:after
			border-left 20px solid white
			border-top 23px solid transparent
			border-bottom 23px solid transparent
			content ""
			position absolute
			top 0
		.menu
			margin 0
			padding 0
			text-align center
			li
				color black
				background #C0C0C0
				display inline-block
				padding 10px

					
				.item
					color white
					text-decoration none
					font-size 22px
					color black
					padding 10px
					&:hover
						background black
						color white